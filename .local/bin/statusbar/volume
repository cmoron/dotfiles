#!/usr/bin/env bash

case $BLOCK_BUTTON in
    #1) setsid "$TERMINAL" -e alsamixer & ;;
    2) amixer sset Master toggle > /dev/null 2>/dev/null ;;
    4) amixer sset Master 5%+ >/dev/null 2>/dev/null ;;
    5) amixer sset Master 5%- >/dev/null 2>/dev/null ;;
    3) pgrep -x dunst >/dev/null && notify-send "ðŸ“¢ Volume module" "\- Shows volume ï€¨, ïš©; if muted.
- Middle click to mute.
- Scroll to change."
esac

volstat="$(amixer get Master)"

echo "$volstat" | grep "\[off\]" >/dev/null && printf "ïš©\\n" && exit

vol=$(echo "$volstat" | grep -o "\[[0-9]\+%\]" | sed 's/[^0-9]*//g' | head -1)

if [ "$vol" -gt "70" ]; then
    icon="ï€¨"
elif [ "$vol" -lt "30" ]; then
    icon="ï€¦"
else
    icon="ï€§"
fi

printf "%s %s%%\\n" "$icon" "$vol"
