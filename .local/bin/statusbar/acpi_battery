#!/usr/bin/env bash

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "ï‰€  Battery module" "ï‰€: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!
- Text color reflects charge left" ;;
esac

acpi_res=$(acpi -b)

ORG_IFS=$IFS
res=""
IFS=$'\n'

for battery in $acpi_res; do

    capacity=$(echo $battery | awk -F ', ' '{print $2}' | sed 's/%//')
    status=$(echo $battery | awk -F ', ' '{print $1}' |awk -F ": " '{print $2}')
    remaining=""
    icon=""
    warn=""
    color="#ffffff"

    if [[ "$status" == "Not charging" ]]; then
        icon="ğŸ›‘"
    fi

    if [[ "$status" == "Discharging" ]]; then
        remaining=$(echo $battery | awk -F ', ' '{print $3}' | sed 's/ remaining//')
        icon="ğŸ›‘"

        if [ "$capacity" -ge 75 ]; then
            color="#00ff00"
            icon="ï‰€ "
        elif [ "$capacity" -ge 50 ]; then
            color="#ffffff"
            icon="ï‰ "
        elif [ "$capacity" -ge 25 ]; then
            color="#ffff00"
            icon="ï‰‚ "
        else
            color="#ff0000"
            icon="ï‰ƒ "
            warn="â—"
        fi
    fi

    if [ "$status" = "Charging" ]; then
        color="#00ff00"
        icon="ğŸ”Œ"
    fi

    [ "$status" == "Unknown" ] && icon="â™»ï¸ "

    if [ "$capacity" == 100 ]; then
        status="Full"
        icon="âš¡"
    fi

    if [[ -z "$remaining" ]]; then
        capacity="<span color=\""$color"\">$capacity%</span>"
    else
        capacity="<span color=\""$color"\">$capacity% $remaining</span>"
    fi

    res+=$(printf "%s%s%s\n" "$icon" "$warn" "$capacity")

done

IFS=$ORG_IFS

echo "$res"
